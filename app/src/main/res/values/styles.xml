<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StepHeaderTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/item_step_header_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/item_step_vertical_margin</item>
        <item name="android:paddingStart">@dimen/item_step_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/item_step_horizontal_padding</item>
    </style>

    <style name="StepErrorTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/item_error_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
